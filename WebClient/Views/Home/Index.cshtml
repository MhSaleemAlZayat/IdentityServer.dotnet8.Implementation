@{
    ViewData["Title"] = "Home Page";
}
<style>
    table{
        width: 100% !important;
    }
</style>
@using Microsoft.AspNetCore.Authentication
@{
    var authResult = await Context.AuthenticateAsync();
    var userName = User.Claims.Where(c => c.Type == "name").FirstOrDefault().Value;
}
<div class="text-center">
    <h1 class="display-4">Welcome  @userName</h1>
    <p>Following tables contains user claims and authenticate propertyies</p>
</div>

<h2>Claims</h2>
<table class="table table-striped table-bordered">
    <thead>
        <th width="10">Type</th>
        <th width="90">Value</th>
    </thead>
    <tbody>
        @foreach (var claim in User.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </tbody>
</table>

<h2>Properties</h2>
<table class="table table-striped table-bordered">
    <thead>
    <th width="10">Type</th>
    <th width="90">Value</th>
    </thead>
    <tbody>
        @foreach (var prop in authResult.Properties!.Items)
        {
        <tr>
                <td>@prop.Key</td>
                <td>@prop.Value</td>
        </tr>
        }
    </tbody>
</table>


